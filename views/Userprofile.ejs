<%- include ('./partials/_header.ejs')  %> 
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<style>

    h1 {
        color: #333;
    }
    ul {
        list-style-type: none;
        padding: 0;
        display: flex;
        flex-wrap: wrap;
    }

    #li {
        width: calc(33.33% - 20px);
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        margin: 10px;
        padding: 20px;
    }

    li h2 {
        margin-top: 0;
        color: #333;
    }


</style>
<body>
    <div class="container row">
        <div class="col-3 m-0">
            <img src="data:image/png;base64," alt="">
        </div>
        <div class="col-8 text-start">

    <h1>Name: <%= user.username %></h1>
    <h1>Email: <%= user.email %></h1> 
</div>
<hr>
    </div>
    <div class="row">
    <div class="sidebar col-2" style="width: 200px;">
        <ul class="list-group" >
            <li class="list-group-item"><a class="btn " onclick="showorder()" >Order</a></li>
            <li class="list-group-item"><a class="btn " onclick="showwishlist()">Wishlist</a></li>
            <li class="list-group-item"><a class="btn " href="/settings">User Settings</a></li>
        </ul>

    </div> 

    <div  >
    <ul class="container col-8" id="Order">

    </ul>

    </div> 
    </div>


   <script>
function showwishlist(){
    document.getElementById('Order').innerHTML=`
    <% wishlistItems.forEach(function(item) { %>
        <li id="li" class="" >
            <img src="<%= item.book.image %>" alt="<%= item.book.title %>" width="200px"><br>
            <h2><%= item.book.title %></h2>
            <div>
            <p  style="width:200px;">Description: <%= item.book.description %></p>
            <p>Price: $<%= item.book.price %></p>
            <button class="btn btn-white" onclick="window.location.href='/books/<%= item.book._id %>'">View Detail</button>
            <button class="btn btn-white" onclick="addToOrder('<%= item.book._id %>')">Add Order</button>
            <button class="btn btn-white" onclick="addToWishlist('<%= item.book._id %>')">Add Wishlist</button>
            
            </div>

        </li>
    <% }); %>
    `
}
   
function showorder(){
    document.getElementById('Order').innerHTML=`
    <% orders.forEach(function(item) { %>
        <li id="li" class="" >
            <img src="<%= item.book.image %>" alt="<%= item.book.title %>" width="200px"><br>
            <h2><%= item.book.title %></h2>
            <div>
            <p  style="width:200px;">Description: <%= item.book.description %></p>
            <p>Price: $<%= item.book.price %></p>
            <button class="btn btn-white" onclick="window.location.href='/books/<%= item.book._id %>'">View Detail</button>
            <button class="btn btn-white" onclick="addToOrder('<%= item.book._id %>')">Add Order</button>
            <button class="btn btn-white" onclick="addToWishlist('<%= item.book._id %>')">Add Wishlist</button>
            
            </div>

        </li>
    <% }); %>
    `
}
   

</script>
</body>
</html>
<%- include ('./partials/_footer.ejs') %> 
